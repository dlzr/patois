<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Used in the IntroActivity. -->
    <color name="intro_text">#eeeeee</color>
    <color name="intro_background">#3b3e42</color>

    <style name="Theme.IntroActivity" parent="android:Theme">
        <item name="android:windowBackground">@color/intro_background</item>
        <item name="android:colorBackgroundCacheHint">@color/intro_background</item>
    </style>

    <style name="intro_title">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="intro_text">
        <item name="android:textColor">@color/intro_text</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- Used in the EditLanguages and EditWord activities. -->
    <style name="add_button">
        <item name="android:background">@android:drawable/btn_default_small</item>
        <item name="android:src">@drawable/add_sign</item>
    </style>

    <style name="delete_button">
        <item name="android:background">@android:drawable/btn_default_small</item>
        <item name="android:src">@drawable/delete_sign</item>
    </style>

    <!-- Used in the BrowseWordsActivity. -->
    <style name="main_word" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <color name="score_good">#008800</color>
    <color name="score_average">#cc9900</color>
    <color name="score_bad">#880000</color>

    <style name="browse_score">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="browse_score_good" parent="browse_score">
        <item name="android:textColor">@color/score_good</item>
    </style>
    <style name="browse_score_average" parent="browse_score">
        <item name="android:textColor">@color/score_average</item>
    </style>
    <style name="browse_score_bad" parent="browse_score">
        <item name="android:textColor">@color/score_bad</item>
    </style>

    <style name="translations" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="language_code_tag" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#666666</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="untranslated_word" parent="main_word">
        <item name="android:textColor">#990000</item>
    </style>

    <!-- Used in the PracticeActivity. -->
    <style name="practice_score">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="practice_score_good" parent="practice_score">
        <item name="android:textColor">@color/score_good</item>
    </style>
    <style name="practice_score_average" parent="practice_score">
        <item name="android:textColor">@color/score_average</item>
    </style>
    <style name="practice_score_bad" parent="practice_score">
        <item name="android:textColor">@color/score_bad</item>
    </style>

    <style name="practice_word_language">
        <item name="android:textColor">#666666</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="practice_main_word_language" parent="practice_word_language">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="practice_word_name">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="practice_main_word_name" parent="practice_word_name">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
